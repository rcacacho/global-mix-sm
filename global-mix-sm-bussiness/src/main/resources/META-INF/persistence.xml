        <class>global.mix.sm.api.entity.Confirmacionpago</class>
        <class>global.mix.sm.api.entity.Detallematerial</class>
        <class>global.mix.sm.api.entity.Detallepedido</class>
        <class>global.mix.sm.api.entity.Detallepedidonormal</class>
